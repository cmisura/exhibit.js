device-width-phone-both 	   = 'only screen and ( min-width : 320px ) and ( max-width : 768px )' 
device-width-phone-landscape   = 'only screen and ( min-device-width : 320px ) and ( max-device-width : 568px ) and ( orientation : landscape )'
device-width-phone-portrait    = 'only screen and ( min-device-width : 320px ) and ( max-device-width : 568px ) and ( orientation : portrait )'   
device-width-tablet-both 	   = 'only screen and ( min-width : 768px ) and ( max-width : 1024px )' 
